<ul class="media-list">
  <% @favorites.each do |favorite| %>
  <% micropost = Micropost.find(favorite.micropost_id) %>
  <li class="media">
    <div class="media-left">
      <img class="media-object img-rounded" src="
      <%= gravatar_url(@user, { size: 50 }) %>
      " alt="NoImage">
    </div>
    <div class="media-body">
      <div>
        <%= link_to micropost.user.name, user_path(micropost.user) %>
      <span class="text-muted">
        posted at <%= micropost.created_at %>
      </span>
      </div>
      <div>
        <p><%= micropost.content %></p>
      </div>
       <div>
      <%= render 'favorites/favorite_button', micropost: micropost %>
      </div>
      <div>
        <% if current_user == micropost.user %>
        <%= link_to "Delete", micropost, method: :delete, data: { confirm:"削除してよろしいですか？" }, class: 'btn btn-danger btn-xs' %>
        <% end %>
      </div>
    </div>
  </li>
<% end %>
<%#= paginate microposts %>
</ul>